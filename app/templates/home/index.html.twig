{% extends 'base.html.twig' %}

{% block title %}Strona główna - Mój Blog{% endblock %}

{% block body %}
<header class="masthead">
    <div class="container py-5 text-center">
        <h1 class="mb-4">
        {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('category_index') }}">Kategorie</a>
        {% endif %}
        </h1>
        <div class="d-flex flex-wrap justify-content-center gap-2">
            {% for category in categories %}
                <a href="{{ path('category_filter', { 'id': category.id }) }}" class="btn btn-outline-primary btn-sm">
                    {{ category.name }}
                </a>
            {% else %}
                <p>Brak kategorii.</p>
            {% endfor %}
        </div>
    </div>
</header>

{# Obsługa wiadomości flash #}
{% for label, messages in app.flashes %}
    <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
        {% for message in messages %}
            {{ message }}
        {% endfor %}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
{% endfor %}

{% if selectedCategory is defined %}
    <h2 class="text-center">Posty w kategorii: {{ selectedCategory.name }}</h2>
{% endif %}

<div class="row">
    <div class="col-lg-8 col-md-10 mx-auto">
        {% for post in posts %}
            <div class="post-preview">
                <a href="{{ path('post_show', { 'id': post.id }) }}">
                    <h2 class="post-title">{{ post.title }}</h2>
                    <h3 class="post-subtitle">{{ post.content|slice(0, 150) ~ '...' }}</h3>
                </a>
                <p class="post-meta">
                    Opublikowano przez {{ post.author.nickname }} dnia {{ post.createdAt|date('d-m-Y H:i') }}
                    {% if post.updatedAt is defined and post.updatedAt is not null and post.updatedAt != post.createdAt %}
                        <br>
                        Zmodyfikowano dnia {{ post.updatedAt|date('d-m-Y H:i') }}
                    {% endif %}
                </p>
                <div class="d-flex justify-content-between align-items-center">
                    <a href="{{ path('category_filter', { 'id': post.category.id }) }}" class="btn btn-outline-primary btn-sm">
                        {{ post.category.name }}
                    </a>
                    <div>
                        {% for tag in post.tags %}
                            <a href="{{ path('tag_filter', { id: tag.id }) }}" class="btn btn-outline-secondary btn-sm" style="margin-right: 0.2rem; opacity: 0.85;">
                                {{ tag.title }}
                            </a>
                        {% endfor %}
                    </div>
                    <div class="d-flex gap-2">
                        {% if is_granted('POST_EDIT', post) %}
                            <a href="{{ path('post_edit', { 'id': post.id }) }}" class="btn btn-warning btn-sm">Edytuj</a>
                        {% endif %}
                        {% if is_granted('POST_DELETE', post) %}
                            <a href="{{ path('post_delete', { 'id': post.id, 'return_to': path('post_index')}) }}" class="btn btn-danger btn-sm">Usuń</a>
                        {% endif %}
                    </div>
                </div>
            </div>
            <hr>
        {% else %}
            <p>Brak postów do wyświetlenia.</p>
        {% endfor %}
    </div>
</div>

<div class="pagination justify-content-center">
    {{ knp_pagination_render(posts) }}
</div>
{% endblock %}