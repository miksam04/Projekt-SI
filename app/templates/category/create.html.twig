{% extends 'base.html.twig' %}

{% block title %}Kategorie - Mój Blog{% endblock %}

{% block body %}
<div class="container py-5 mt-5">
    <h1 class="text-center mb-4">Kategorie</h1>

    <!-- Formularz dodawania kategorii -->
    <div class="card mb-5">
        <div class="card-header">
            <h2>Dodaj nową kategorię</h2>
        </div>
        <div class="card-body">
            {{ form_start(form) }}
                {{ form_row(form.name, {'label': 'Nazwa kategorii'}) }}
                <button type="submit" class="btn btn-success">Dodaj</button>
            {{ form_end(form) }}
        </div>
    </div>

    <!-- Tabela kategorii -->
    <div class="d-flex justify-content-end mb-3">
        <a href="#" class="btn btn-primary">Dodaj nową kategorię</a>
    </div>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nazwa</th>
                <th scope="col">Akcje</th>
            </tr>
        </thead>
        <tbody>
            {% for category in categories %}
                <tr>
                    <th scope="row">{{ loop.index }}</th>
                    <td>{{ category.name }}</td>
                    <td>
                        <a href="#" class="btn btn-sm btn-info">Edytuj</a>
                        <a href="#" class="btn btn-sm btn-danger">Usuń</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3" class="text-center">Brak kategorii do wyświetlenia.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

<div class="pagination justify-content-center">
    {{ knp_pagination_render(categories) }}
</div>
{% endblock %}